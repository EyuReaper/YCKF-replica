{
  "compilerOptions": {
    "target": "ES2022",         // Recommended: Use a slightly newer target
    "module": "NodeNext",       // CRITICAL CHANGE: Use NodeNext for ESM compatibility
    "moduleResolution": "NodeNext", // CRITICAL CHANGE: Use NodeNext resolution rules
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": ["src"]
}
